<h1><%= @item.id ? 'Edit Item' : 'Create Item' %></h1>
<hr />
<%= form_for [@department, @item] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description, required: true %>
  <br />
  <%= f.label :price %>
  <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: 0.01 %>
  <%= f.submit %>
  <br />
  <%= link_to "Back To #{@department.name} List", department_items_path(@department)%>
<% end %>